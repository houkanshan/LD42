#leader-board
  background: white
  position: absolute
  width: 414px
  right: 3px
  top: 8px
  label
    display: block
    text-align: right
    transform-origin: top right
  .table
    overflow: hidden
    border-top: none
    position: relative
    > .hd
      background: $bgGray
      text-align: center
      font-weight: bold
      font-size: 13px
      border: 1px solid black
      padding-top: 1px
      border-bottom: none
  .leader-board-container
    padding: 3px 1px
    border: 1px solid black
  .rank::after
    content: 'th'
    font-size: 12px
    font-weight: normal
  .leader-board-item:nth-child(10n + 1)
    .rank::after
      content: 'st'
  .leader-board-item:nth-child(10n + 2)
    .rank::after
      content: 'nd'
  .leader-board-item:nth-child(10n + 3)
    .rank::after
      content: 'rd'
  .leader-board-item
    padding: 1px
    border: 1px solid
    display: flex
    border: 1px solid
    &:not(:last-child)
      margin-bottom: 3px
    > *
      border: 1px solid
      &:not(:last-child)
        margin-right: 1px
    .rank
      flex: none
      width: 45px
      text-align: center
      font-size: 20px
      font-weight: bold
      display: flex
      align-items: baseline
      justify-content: center
      padding-top: 10px
    .avatar
      width: 45px
      height: 45px
      flex: none
      img
        width: 100%
        height: 100%
    .player-info
      flex: 1 0
      overflow: hidden
      padding: 8px 5px
      padding-bottom: 0
      position: relative
      height: 37px
      .name
        font-weight: bold
        font-size: 13px
      .ip
        font-style: italic
      .btn-message
        position: absolute
        right: 2px
        bottom: 2px
        border: 1px solid
        background: $bgGray
        padding: 0 7px
    .score-container
      flex: none
      width: 71px
      text-align: center
      line-height: 1
      padding-top: 2px
    .score
      font-size: 28px
      font-weight: bold

.message-content
  position: absolute
  background: white
  border: 1px solid
  min-height: 30px
  padding: 5px

#leader-board-update-time
  text-align: center
  margin-top: 2px
  &::before
    content: 'Last updated on: '